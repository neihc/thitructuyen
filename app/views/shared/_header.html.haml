.col-md-3.left_col
  .left_col.scroll-view
    .navbar.nav_title{ style: "border: 0;" }
      %a.site_title{ href: "#" }
        %i.fa.fa-book
        %span ThiTrucTuyen
    .clearfix
    .profile.clearfix
      .profile_pic
        %img.img-circle.profile_img{ src: asset_path("avatar.jpg") }
      .profile_info
        %span Welcome,
        %h2= current_admin.email
    %br
    #sidebar-menu.main_menu_side.hidden-print.main_menu
      .menu_section
        %h3 General
        %ul.nav.side-menu
          %li
            %a{ href: admin_path }
              %i.fa.fa-home
              Home
          %li
            %a{ href: admins_categories_path }
              %i.fa.fa-folder-open
              Categories manager
.top_nav
  .nav_menu
    %nav
      .nav.toggle
        %a#menu_toggle
          %i.fa.fa-bars
      %ul.nav.navbar-nav.navbar-right
        %li
          %a.user-profile.dropdown-toggle{ "aria-expanded": "false", "data-toggle": "dropdown", href: "javascript:;" }
            %img{ src: asset_path("avatar.jpg") }
            = current_admin["fullname"]
            %span.fa.fa-angle-down
          %ul.dropdown-menu.dropdown-usermenu.pull-right
            %li
              = link_to admin_logout_path, method: "delete" do
                %span.fa.fa-sign-out
                %span Log out
