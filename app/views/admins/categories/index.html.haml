.page-title
  .title_left
    %h3 Categories Manager

.clearfix
.row
  .col-md-12
    .x_panel
      .x_title
        %h4
          List Category
          = link_to "New category", new_admins_category_path, class: "btn btn-sm btn-primary pull-right"
        .clearfix
      .x_content
        %table.table.table-striped
          %tr
            %th #
            %th Name
            %th Created at
            %th Updated at
            %th Action
          - @categories.each do |category|
            %tr
              %td= category.id
              %td= category.name
              %td= category.created_at
              %td= category.updated_at
              %td
                = link_to "Edit", edit_admins_category_path(category), class: "btn btn-sm btn-default"
                = link_to "Delete", admins_category_path(category), method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm btn-danger"
        = will_paginate @categories

