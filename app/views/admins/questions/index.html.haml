.page-title
  .title_left
    %h3 Questions Manager

.clearfix
.row
  .col-md-12
    .x_panel
      .x_title
        %h4
          List Question
          = link_to "New question", new_admins_question_path, class: "btn btn-sm btn-primary pull-right"
        .clearfix
      .x_content
        %table.table.table-striped
          %tr
            %th #
            %th Description
            %th Created at
            %th Updated at
            %th Action
          - @questions.each do |question|
            %tr
              %td= question.id
              %td= question.description
              %td= question.created_at
              %td= question.updated_at
              %td
                = link_to "Edit", edit_admins_question_path(question), class: "btn btn-sm btn-default"
                = link_to "Delete", admins_question_path(question), method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm btn-danger"
        = will_paginate @questions

