- provide(:title, "Log in")
%div
  %a#signup.hiddenanchor
  %a#signin.hiddenanchor
  .login_wrapper
    .animate.form.login_form
      %section.login_content
        = form_for(:session, url: login_path) do |f|
          %h1 Login Form
          %div
            = f.email_field :email, class: "form-control"
          %div
            = f.password_field :password, class: "form-control"
          %div
            = f.submit "Log in", class: "btn btn-default submit"
            %a.reset_pass{:href => "#"} Lost your password?
          .clearfix
          .separator
            %p.change_link
              New to site?
              %a.to_register{:href => "#signup"} Create Account
            .clearfix
            %br/
            %div
              %h1
                %i.fa.fa-paw
                Project ThiTrucTuyen
              %p ©2017 All Rights Reserved
    #register.animate.form.registration_form
      %section.login_content
        %form
          %h1 Create Account
          %div
            %input.form-control{:placeholder => "Username", :required => "", :type => "text"}/
          %div
            %input.form-control{:placeholder => "Email", :required => "", :type => "email"}/
          %div
            %input.form-control{:placeholder => "Password", :required => "", :type => "password"}/
          %div
            %a.btn.btn-default.submit{:href => "index.html"} Submit
          .clearfix
          .separator
            %p.change_link
              Already a member ?
              %a.to_register{:href => "#signin"} Log in
            .clearfix
            %br/
            %div
              %h1
                %i.fa.fa-paw
                Gentelella Alela!
              %p ©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms
